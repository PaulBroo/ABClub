<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterfacesPrincipais.MenuAdmin">

    <Button
        android:id="@+id/BtnLogoutAdmin"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#226DA8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/BtnLogoutAdmin">

        <Button
            android:id="@+id/BtnRegistar"
            android:layout_width="270dp"
            android:layout_height="57dp"
            android:text="Criar Utilizador"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#EAD311"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:onClick="AbrirCriarUtilizador"/>

        <Button
            android:id="@+id/BtnListaJogadores"
            android:layout_marginTop="20dp"
            android:layout_width="270dp"
            android:layout_height="57dp"
            android:text="Lista de Jogadores"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#EAD311"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:onClick="AbrirListaDeJogadores"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>