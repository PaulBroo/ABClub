<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/FotoJogadorLista"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NomeListaJogadores"
            android:layout_marginLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:text="TÃ­tulo"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DescricaoListaJogadores"
                android:layout_marginLeft="15dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Seniores M"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/AbrirPerfilJogadorLista"
                android:layout_width="150dp"
                android:layout_marginLeft="8dp"
                android:layout_height="45dp"
                android:text="Abrir Perfil"
                android:background="@drawable/roundstyle"
                android:backgroundTint="@color/orange"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>